<MyGridLayout>
	cols:1
	spacing:10

	canvas.before:
        Color:
            rgba: (85/255, 85/255, 85/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

	
	TextInput:
        id: 'input'
        hint_text:'Gib deine Größe '
        pos_hint: {'center_x': 0.5, 'center_y': 0.705}
        size_hint: 0.95, 0.5

	Carousel:
	    direction: 'right'
	    AsyncImage:
	        source: 'images/Anleitung1.png'
	    AsyncImage:
	        source: 'images/Anleitung2.png'
	
	GridLayout:
		cols:2

		CheckBox:
        	id: checkbox
			
		Label:
			text: "Tutorial beim Start anzeigen"
			font_size:20

	Button:
		#on_press:root.playSound('Katze')
		background_color: ("#00FFFF")
