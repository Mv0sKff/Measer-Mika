<MyGridLayout>
	cols:2
	spacing:10
	
	Button:
		on_press:root.playSound('Vogel')
		background_color: ("#FF8C00")
		Image:
			source: 'images/vogel.png'
			center_x: self.parent.center_x
			center_y: self.parent.center_y
			allow_stretch: True
			size: root.width*0.25, root.height*0.25

