<MyGridLayout>
	cols:1
	spacing: 10
	padding: 10

	canvas.before:
        Color:
            rgba: (85/255, 85/255, 85/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
	
	TextInput:
        id: 'input'
        hint_text:'Deine Größe in cm'
		multiline: False
		padding: [20, 20, 20, 20]
		#spacing: 20
		size_hint_y: None
		height: 60

	Carousel:
	    direction: 'right'
	    AsyncImage:
	        source: 'images/Anleitung1.png'
	    AsyncImage:
	        source: 'images/Anleitung2.png'
	
	GridLayout:
		cols:2

		Label:
			text: "Tutorial beim Start anzeigen"
			font_size:20

		CheckBox:
        	id: checkbox

	Button:
		#on_press:root.playSound('Katze')
		background_color: ("#00FFFF")
		#size_hint: (.3, 1)
